    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Toastify JS -->
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function () {
        // Animate content on page load
        const contentElements = document.querySelectorAll('.animate-fade-in');
        contentElements.forEach(el => {
            el.classList.add('animate-fade-in');
        });

        // Add to cart functionality
        const addToCartButtons = document.querySelectorAll('.add-to-cart-btn');
        addToCartButtons.forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();

                const productId = this.getAttribute('data-id');
                const productName = this.getAttribute('data-name');

                // AJAX call to add item to cart
                fetch(`@Url.Action("AddToCart", "Music")?id=${productId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Show success notification
                        Toastify({
                            text: `${productName} added to your cart!`,
                            duration: 3000,
                            gravity: "top",
                            position: "right",
                            stopOnFocus: true,
                            close: true,
                            className: "toastify",
                            style: {
                                background: "linear-gradient(135deg, var(--secondary), var(--retro-blue))",
                            }
                        }).showToast();

                        // Optional: Update cart count in navbar if you have one
                        if (data.cartCount && document.getElementById('cartCount')) {
                            document.getElementById('cartCount').textContent = data.cartCount;
                        }
                    } else {
                        // Show error notification
                        Toastify({
                            text: "Could not add to cart. Please try again.",
                            duration: 3000,
                            gravity: "top",
                            position: "right",
                            stopOnFocus: true,
                            close: true,
                            className: "toastify",
                            style: {
                                background: "linear-gradient(135deg, var(--accent), var(--primary))",
                            }
                        }).showToast();
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Toastify({
                        text: "An error occurred. Please try again.",
                        duration: 3000,
                        gravity: "top",
                        position: "right",
                        stopOnFocus: true,
                        close: true,
                        className: "toastify",
                        style: {
                            background: "linear-gradient(135deg, var(--accent), var(--primary))",
                        }
                    }).showToast();
                });
            });
        });

        // Add to wishlist functionality
        const wishlistButtons = document.querySelectorAll('.btn-wishlist');
        wishlistButtons.forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();

                const productId = this.getAttribute('data-id');
                const icon = this.querySelector('i');

                // Toggle icon
                if (icon.classList.contains('far')) {
                    icon.classList.remove('far');
                    icon.classList.add('fas');

                    // AJAX call to add to wishlist
                    fetch(`@Url.Action("Add", "WishList")?id=${productId}`, {
                        method: 'POST'
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Toastify({
                                text: "Added to your wishlist!",
                                duration: 3000,
                                gravity: "top",
                                position: "right",
                                stopOnFocus: true,
                                close: true,
                                className: "toastify"
                            }).showToast();
                        }
                    });
                } else {
                    icon.classList.remove('fas');
                    icon.classList.add('far');

                    // AJAX call to remove from wishlist
                    fetch(`@Url.Action("Remove", "WishList")?id=${productId}`, {
                        method: 'POST'
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Toastify({
                                text: "Removed from your wishlist!",
                                duration: 3000,
                                gravity: "top",
                                position: "right",
                                stopOnFocus: true,
                                close: true,
                                className: "toastify"
                            }).showToast();
                        }
                    });
                }
            });
        });

        // Current year for footer
        document.querySelectorAll('.current-year').forEach(el => {
            el.textContent = new Date().getFullYear();
        });
    });
    </script>

