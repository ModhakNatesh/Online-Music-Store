@{
    ViewBag.Title = "Admin Dashboard";
}

<div class="retro-container">
    <h2 class="page-title mb-4">
        <i class="fas fa-tachometer-alt me-2 text-primary"></i>
        Admin Dashboard
    </h2>

    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card border-0" style="box-shadow: 5px 5px 0px var(--primary); border: 2px solid var(--dark);">
                <div class="card-body text-center">
                    <div class="display-4 mb-2 text-primary">
                        <i class="fas fa-users"></i>
                    </div>
                    <h4 class="card-title mb-1">Total Users</h4>
                    <h2 class="mb-0 fw-bold text-dark">@ViewBag.TotalUsers</h2>
                    <div class="mt-3">
                        <a href="@Url.Action("Users", "Admin")" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-eye me-1"></i> View Users
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-0" style="box-shadow: 5px 5px 0px var(--secondary); border: 2px solid var(--dark);">
                <div class="card-body text-center">
                    <div class="display-4 mb-2 text-secondary">
                        <i class="fas fa-compact-disc vinyl-animation"></i>
                    </div>
                    <h4 class="card-title mb-1">Music Items</h4>
                    <h2 class="mb-0 fw-bold text-dark">@ViewBag.TotalMusic</h2>
                    <div class="mt-3">
                        <a href="@Url.Action("MusicItems", "Admin")" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-eye me-1"></i> View Inventory
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-0" style="box-shadow: 5px 5px 0px var(--accent); border: 2px solid var(--dark);">
                <div class="card-body text-center">
                    <div class="display-4 mb-2" style="color: var(--accent);">
                        <i class="fas fa-shopping-bag"></i>
                    </div>
                    <h4 class="card-title mb-1">Total Orders</h4>
                    <h2 class="mb-0 fw-bold text-dark">@ViewBag.TotalOrders</h2>
                    <div class="mt-3">
                        <a href="@Url.Action("Orders", "Admin")" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-eye me-1"></i> View Orders
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-0" style="box-shadow: 5px 5px 0px var(--retro-purple); border: 2px solid var(--dark);">
                <div class="card-body text-center">
                    <div class="display-4 mb-2" style="color: var(--retro-purple);">
                        <i class="fas fa-rupee-sign"></i>
                    </div>
                    <h4 class="card-title mb-1">Total Sales</h4>
                    <h2 class="mb-0 fw-bold text-dark">₹@ViewBag.TotalSales</h2>
                    <div class="mt-3">
                        <span class="text-muted small">Revenue to date</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="retro-container" style="margin: 0;">
                <h4 class="mb-3">
                    <i class="fas fa-tasks me-2 text-primary"></i>
                    Quick Actions
                </h4>
                <div class="d-grid gap-3">
                    <a href="@Url.Action("CreateMusic", "Admin")" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i> Add New Music Item
                    </a>
                    <a href="@Url.Action("Feedbacks", "Admin")" class="btn btn-outline-primary">
                        <i class="fas fa-comments me-2"></i> View Customer Feedback
                    </a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                        <i class="fas fa-store me-2"></i> View Store Front
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="retro-container" style="margin: 0;">
                <h4 class="mb-3">
                    <i class="fas fa-info-circle me-2 text-primary"></i>
                    System Information
                </h4>
                <ul class="list-group" style="border-radius: 8px; overflow: hidden;">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-database me-2 text-primary"></i> Database Status</span>
                        <span class="badge bg-success rounded-pill">Connected</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-server me-2 text-primary"></i> Server Time</span>
                        <span>@DateTime.Now.ToString("g")</span>
                    </li>
                    
                </ul>
            </div>
        </div>
    </div>
</div>